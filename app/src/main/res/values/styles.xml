<resources>

    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <!--item name="actionModeStyle">@style/ActionModeStyle</item-->
        <item name="actionModeBackground">@drawable/action_mode_background</item>
        <item name="colorPrimary">@color/toolbarBackground</item>
        <item name="colorControlNormal">@color/toolbarForeground</item>
        <item name="titleTextColor">@color/toolbarForeground</item>
        <item name="actionBarTheme">@style/ActionBarOverlayTheme</item>
        <item name="colorPrimaryDark">@color/statusBarBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.AppTheme"></style>
    <style name="ActionBarOverlayTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--item name="colorControlNormal">#234fff</item-->
        <item name="android:textColorPrimary">@color/actionModeForeground</item>
    </style>
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleTextStyle</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/ToolbarTitleTextStyle</item>
    </style>
    <style name="ToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">22sp</item>
    </style>
